

---

interface Props{
  subtitle:string;
  title:string;
  description:string[];
}

const {subtitle, title, description} = Astro.props
---



<section class="max-w-[80%] 2xl:max-w-[60%] my-10 flex flex-col gap-3">
  <span class="font-geist-light text-purple-500">{subtitle}</span>
  <h2 class="font-geist-black text-2xl xl:text-3xl 2xl:text-5xl">{title}</h2>
  {description.map((desc) => (
    <span class="font-geist-light text-md xl:text-xl">{desc}</span>
  ))}
</section>